 
      <table class="table table-hover table-inverse">
      <thead>
      <tr>
        <th> </th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
        <th colspan="3"></th>

      </tr>
      </thead>


      <% books.each do |book| %>
      <tbody>
        <tr>
        <td><%= link_to user_path(book.user.id) do %>
        <%= image_tag book.user.get_profile_image(100,100), class: "mt-3 rounded-circle" %>
        <% end %>
        </td>
        <td><%= link_to book_path(book.id) do %>
        <%= book.title %></td>
        <% end %>
        <td><%= book.body %></td>
        


        <td class="favorites_button_<%= book.id %>">
          <%= render 'favorites/favorite-btn', book: book %>
        </td>


        <td><%= link_to "コメント数: #{book.book_comments.count} ", book_path(book.id) %></td>
        <td><%= l book.created_at %></td>
        
        <td>
          <p class="view_count"><i class="far fa-chart-bar"></i>
          <%= book.view_counts.count %>
          </p>
        </td>
        
        </tr>

      </tbody>
      <% end %>
      </table>