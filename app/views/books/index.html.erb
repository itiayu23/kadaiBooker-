<h1>New book</h1>
<%= form_with model: @book do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :opinion %>

<%= f.submit 'Create Book' %>

<% end %>

<h1>Books</h1>
<table>
<tr>
  <th> </th>
  <th>Title</th>
  <th>Opinion</th>
</tr>


<% @books.each do |book| %>
<div>
  <tr>
  <td><%= image_tag book.user.get_profile_image(100,100) %></td>
  <td><%= link_to book_path(book.id) do %>
  <%= book.title %></td>
  <% end %>
  <td><%= book.opinion %></td>
  </tr>
 
</div>
<% end %>
</table>
