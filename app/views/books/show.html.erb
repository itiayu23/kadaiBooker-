<div class="container px-5 px-sm-0">
  <div class="row">
    
   
    


<%= render 'books/list', book: @book_new, user: @user %>

    <div class="col-md-8 offset-md-1">


<h2>Book detail</h2>
<table class="table">
  <tbody>
 <tr>
  <td>
    <%= link_to user_path(@user.id) do %>
    
    <%= image_tag @user.get_profile_image(100,100) %>
  <br>
  <%= @user.name %>
  <% end %>
  </td>
  
  <td><%= link_to book_path(@book.id) do %>
    <%= @book.title %>
    <% end %>
    </td>
    
  <td><%= @book.body %></td>
  
      <td class="favorites_button_<%= @book.id %>">
        <%= render 'favorites/favorite-btn', book: @book %>
      </td>
      
       <td>
          <p>コメント数:<%= @book.book_comments.count %></p>
        </td>

  <% if @book.user == current_user %>
        
          <td><%= link_to edit_book_path(@book.id), class: "btn btn-sm btn-success" do %>
          Edit<% end %></td>
          <td><%= link_to book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger" do %>
          Destroy<% end %></td>

  <% else %>
     <td></td>
     <td></td>
  
       
  
 <% end %>
  </tr>

 </tbody>
</table>

<div class="book_comment_index">
  <%= render 'book_comments/comment-index', book: @book %>
</div>
<div class="book_comment_form">
<%= render 'book_comments/form', book: @book, book_comment: @book_comment %>  
</div>






 </div>
  </div>
</div>
