<%= render 'books/list', books: @books %>

<h1>Books</h1>
<table>
<tr>
  <th> </th>
  <th>Title</th>
  <th>Opinion</th>
</tr>


<% @books.each do |book| %>
<div>
  <tr>
  <td><%= image_tag book.user.get_profile_image(100,100) %></td>
  <td><%= link_to book_path(book.id) do %>
  <%= book.title %></td>
  <% end %>
  <td><%= book.opinion %></td>
  </tr>

</div>
<% end %>
</table>
